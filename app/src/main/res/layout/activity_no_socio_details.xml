<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="54dp"
        android:background="#F5F7FA">

        <!-- Header: Botón Volver y Título en ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Botón Volver -->
            <Button
                android:id="@+id/btnVolver"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:drawable/ic_menu_revert"
                android:text="←"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:contentDescription="Volver a la lista"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETALLES DEL NO SOCIO"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Member Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Member Icon -->
            <ImageView
                android:id="@+id/ivIconoSocio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_manage"
                android:layout_marginEnd="16dp"
                android:contentDescription="Icono del no socio" />

            <!-- Member Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSocioNumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Socio N° #"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: Desconocido\nDNI: 12345678\nCorreo: desconocido@example.com"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Daily Fee Section -->
        <TextView
            android:id="@+id/tvCuotaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pago Diario"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 500 (diario)"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvEstadoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pago pendiente"
            android:textSize="14sp"
            android:textColor="#FF0000"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnRegistrarPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Pago"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Activities List Section -->
        <TextView
            android:id="@+id/tvActividadesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de Actividades"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnInscribirActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inscribir en Actividad"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Activity List Items -->
        <LinearLayout
            android:id="@+id/llActividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Activity Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvNombreActividad1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Actividad\nipsum dolor / ipsum dolor"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnRevocar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revocar"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Activity Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvNombreActividad2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Actividad\nipsum dolor / ipsum dolor"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnRevocar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revocar"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Activity Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvNombreActividad3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Actividad\nipsum dolor / ipsum dolor"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnRevocar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revocar"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Activity Item 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvNombreActividad4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Actividad\nipsum dolor / ipsum dolor"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnRevocar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revocar"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Activity Item 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvNombreActividad5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Actividad\nipsum dolor / ipsum dolor"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnRevocar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revocar"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>